{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["put"],
      "route": "{partitionKey}/{collection}/{id}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "document",
      "databaseName": "ChsPride",
      "collectionName": "{collection}",
      "connectionStringSetting": "CosmosDbConnectionString",
      "id": "{id}",
      "partitionKey": "{partitionKey}"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "ChsPride",
      "collectionName": "{collection}",
      "createIfNotExists": false,
      "connectionStringSetting": "CosmosDbConnectionString",
      "partitionKey": "{partitionKey}"
    },
    {
      "type": "sendGrid",
      "direction": "out",
      "name": "$return",
      "apiKey": "AzureWebJobsSendGridApiKey",
      "to": "peter.bingel@charlestonpride.org",
      "from": "support@charlestonpride.org",
      "subject": "Update to {collection}",
      "text": "An update was made to {partitionKey} {collection}, please check and redeploy if necessary."
    }
  ]
}
